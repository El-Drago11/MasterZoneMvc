     // Bind Business Classes Detail
    function GetAllBusinessOtherClassesDetail() {

        var _url = "/api/Class/GetAllOtherClassesList?classId=" + ClassId_Global;

    $.ajax({
        type: "GET",
        url: _url,
        contentType: 'application/json',
        success: function (response) {
            if (response.status < 1) {
