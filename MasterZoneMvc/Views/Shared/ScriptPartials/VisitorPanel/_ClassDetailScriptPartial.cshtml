                    type: "error",
                    mode: "dark",
                });
                return;
            }

            var OtherClassDetailList = '';
            if (response.data.ClassListDetail.length === 0) {
                OtherClassDetailList = '<div class="w-100 font-italic text-center text-black-50 py-2">No Busines Class Detail.</div>';
                $("#BindBusinessClassesDetailList").append(OtherClassDetailList);
            } else {

                for (var i = 0; i < response.data.ClassListDetail.length; i++) {

                    var OtherClassDetailList = ` <div class="classes-location-items">
                    <h6>${response.data.ClassListDetail[i].Name}</h6>
                    <p>${response.data.ClassListDetail[i].ScheduledDay}.${response.data.ClassListDetail[i].ScheduledMonth}</p>
                    <p>${response.data.ClassListDetail[i].ScheduledStartOnTime_24HF}</p>
                    <p>${response.data.ClassListDetail[i].BusinessName}</p>
                    <a class="view-cta" href="/Home/ClassDetail?classId=${response.data.ClassListDetail[i].Id}">
                        VIEW
                    </a>
                </div>`;

                    $("#BindBusinessOtherClassesDetailList").append(OtherClassDetailList);



                }
                $('.our-class-location .classes-location').slick({
                    dots: true,
                    infinite: false,
                    speed: 300,
                    arrows: false,
                    slidesToShow: 6,
                    slidesToScroll: 6,
                });


            }



            StopLoading();

        },
        error: function (result) {
            StopLoading();


            if (result["status"] == 401) {
                $.iaoAlert({
                    msg: '@(Resources.ErrorMessage.UnAuthorizedErrorMessage)',
                    type: "error",
                    mode: "dark",
                });
            }
            else {
                $.iaoAlert({
                    msg: '@(Resources.ErrorMessage.TechincalErrorMessage)',
                    type: "error",
                    mode: "dark",
                });
            }
        }
    });
    }

