                            msg: '@(Resources.ErrorMessage.TechincalErrorMessage)',
                            type: "error",
                            mode: "dark",
                        });
                    }
                }
            },
            "columns": [
                {
                    "data": "SerialNumber", "name": "SerialNumber", "autoWidth": true
                }


                , {
                    "data": null, "": "LanguageIcon", "autoWidth": true
                    , "render": function (data, type, row) {
                        //---Check Advertisement-Status
                        var _Image = (row.LanguageIconWithPath == '') ? '' : '<img src="' + row.LanguageIconWithPath + '" class="previewimageLanguagePreview" />';
                        return _Image;
                    }
                }
                , { "data": "Language", "name": "Language", "autoWidth": true }

               , {
                    "data": null, "": "Action", "autowidth": true,
                    "render": function (data, type, row) {
                        var _edit = '';
                       var _delete = '';

                                    //_view = `<a href="javascript:viewgroupdetail(${row.Id});"><i class="fas fa-eye" title="View"></i></a>`;

                        _edit = `<a href="javascript:EditBusinessContentLanguageDetail(${row.Id});"><i class="fas fa-edit" title="Edit"></i></a>`;


