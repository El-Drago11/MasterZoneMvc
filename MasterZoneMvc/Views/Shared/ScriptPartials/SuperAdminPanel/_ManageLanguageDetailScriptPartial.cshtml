    var LanguageId_Global = 0;
    function btnSubmitBusinessContentLanguageClick() {
        
        let is_valid = true;
        $(".error-class").html('');
        var _mode = (LanguageId_Global > 0) ? 2 : 1;

        let _manageLanguage = $("#txtLanguage").val().trim();
     
        let _error__manageLanguage = $("#error_txtLanguage");
        let _error_manageLanguageImage = $("#error_fileProfileImage_ManageLanguageImage");

       

        if (validate_IsEmptyStringInputFieldValue(_manageLanguage)) {
            is_valid = false;
            _error__manageLanguage.html('@(Resources.BusinessPanel.LanguageRequired)');
         }



        var _languageImageFile_MS = $("#fileProfileImage_ManageLanguageImage").get(0);
        var _languageImageFiles = _languageImageFile_MS.files;

        if (_mode == 1 && _languageImageFiles.length <= 0) {
            is_valid = false;
            _error_manageLanguageImage.html('@(Resources.BusinessPanel.BusinessLanguageIconRequired)');
            return;
        }


        if (is_valid) {

            var data = new FormData();
            data.append("Id", LanguageId_Global);
            data.append("Language", _manageLanguage);
            data.append("Mode", _mode);
            data.append("LanguageIcon", _languageImageFiles[0]);



            $.ajax({
                url: '/api/Business/AddUpdateBusinessLanguage_PPCMeta',
                headers: {
                    "Authorization": "Bearer " + UserToken_Global
                },
                data: data,
                processData: false,
                mimeType: 'multipart/form-data',
                contentType: false,
                //contentType: 'application/json',
                type: 'POST',
                success: function (dataResponse) {

                    //--Parse into Json of response-json-string
                    dataResponse = JSON.parse(dataResponse);


                    //--If successfully added/updated
                    if (dataResponse.status === 1) {
                        swal("Success!", dataResponse.message, "success");
                        GetAllBusinessContentLanguagePagination();
                    }
                    else {
                        swal({
                            title: 'Error!',
                            icon: 'error',
                            text: dataResponse.message
                        });
                        StopLoading();

                        return;
                    }

                   // EditBusinessProfile();
                    StopLoading();

                },
                error: function (result) {
                    StopLoading();

                    if (result["status"] == 401) {
                        $.iaoAlert({
                            msg: '@(Resources.ErrorMessage.UnAuthorizedErrorMessage)',
                            type: "error",
                            mode: "dark",
                        });
                    }
                    else {
                        $.iaoAlert({
                            msg: '@(Resources.ErrorMessage.TechincalErrorMessage)',
                            type: "error",
                            mode: "dark",
                        });
                    }
                }
            });
        }

    }


      // Image File Preview -------------------------------------------------------------
    document.getElementById('fileProfileImage_ManageLanguageImage').addEventListener('change', handleLanguageImageUpload);

    function handleLanguageImageUpload(event) {
    const file = event.target.files[0];
    const fileSize = file.size / 1024; // size in kilobytes
    const maxSize = 10*1024*1024; // maximum size in kilobytes
    const fileType = file.type;
    const validImageTypes = ['image/jpeg', 'image/png'];

    if (!validImageTypes.includes(fileType)) {
        $.iaoAlert({
            msg: '@(Resources.BusinessPanel.ValidImageTypesRequired)',
            type: "error",
            mode: "dark",
        });
        event.target.value = null; // clear the file input element
        $('#previewimageLanguagePreview').addClass('d-none'); // hide the preview image
        return;
    }
    if (fileSize > maxSize) {
        $.iaoAlert({
            msg: '@(String.Format(Resources.BusinessPanel.FileSizeRequired, "10 MB"))',
            type: "error",
            mode: "dark",
        });
        event.target.value = null; // clear the file input element
        $('#previewimageLanguagePreview').addClass('d-none'); // hide the preview image

        return;
    }

    // image size is within the limit, display the preview image
    const reader = new FileReader();
    reader.onload = function (event) {
        document.getElementById('previewimageLanguagePreview').src = event.target.result;
        $('#previewimageLanguagePreview').removeClass('d-none');
    }

    reader.readAsDataURL(file);
}

    function GetLanguageDataById(id) {
       // $("#collapseAddLanguageService").modal('show');
        //$(".error-class").html('');
        //document.getElementById("Modal_Title").innerHTML = "Edit Language Detail";

        
        var _url = "/api/Business/GetBusinessContentLanguage_PPCMeta?id=" +id ;

    StartLoading();

    $.ajax({
        type: "GET",
        url: _url,
        headers: {
            "Authorization": "Bearer " + UserToken_Global,
            "Content-Type": "application/json"
        },
        contentType: 'application/json',
        success: function (response) {
            if (response.status < 1) {
                $.iaoAlert({
                    msg: response.message,
                    type: "error",
                    mode: "dark",
                });
                return;
            }
            LanguageId_Global = response.data.Id;
            $("#txtLanguage").val(response.data.Language);
            $("#fileProfileImage_ManageLanguageImage").val('');
            if (response.data.LanguageIconWithPath != "") {
                $("#previewimageLanguagePreview").attr('src', response.data.LanguageIconWithPath);
                $("#previewimageLanguagePreview").removeClass('d-none');
        }



            StopLoading();
        },
        error: function (result) {
            StopLoading();

            if (result["status"] == 401) {
                $.iaoAlert({
                    msg: '@(Resources.ErrorMessage.UnAuthorizedErrorMessage)',
                    type: "error",
                    mode: "dark",
                });
            }
            else {
                $.iaoAlert({
                    msg: '@(Resources.ErrorMessage.TechincalErrorMessage)',
                    type: "error",
                    mode: "dark",
                });
            }
        }
    });
    }

