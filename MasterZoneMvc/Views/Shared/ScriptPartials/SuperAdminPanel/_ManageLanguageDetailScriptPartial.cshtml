    function GetAllBusinessContentLanguagePagination() {
        // ---------------- Pagination Data Table --------------------
        var _url_val = "/api/Business/GetAllBusinessContentLanguageByPagination";
          _LanguageTable.clear().destroy();
        _LanguageTable = $("#tblLanguageDetailView").DataTable({
            "processing": true,
