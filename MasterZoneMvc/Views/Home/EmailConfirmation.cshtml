
@{
    ViewBag.Title = "Email Confirmation";
    Layout = "~/Views/Shared/_VisitorLayout.cshtml";
    int status = Convert.ToInt32(ViewBag.Status);
    string message = ViewBag.Message;
}

@section styles {
    <style>
        :root {
            --anchorColor: #fff;
            --anchorColorHover: #f3a762;
            --headingColor: #000;
            --footerTextColor: #fff;
            --mainColor: #f3a762;
            --boxshadow: 5px 5px 10px 0 rgba(0, 0, 0, 50%);
        }

        h2 {
            color: var(--mainColor);
        }

        .btn-theme {
            background: var(--mainColor) !important;
            color: #fff;
        }
    </style>
}

<div class="w-100" style="height:100px;"></div>

<section style="padding: 50px 20px;">
    <div class="row">
        <div class="col-sm-12 text-center">
            <h2 class="font-weight-bold">Email Verification</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-column justify-content-center align-items-center">
                        @if (@status == 1)
                        {
                            <i class="h1 fas fa-check-circle-o text-success"></i>
                        }
                        else
                        {
                            <i class="h1 fas fa-exclamation text-danger"></i>
                        }
                        <h4>@message</h4>
                        <a href="/Home/" class="btn btn-sm btn-theme">Go to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>