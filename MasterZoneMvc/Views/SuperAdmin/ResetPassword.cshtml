
@{
    Layout = null;
    string token = ViewBag.ResetPasswordToken;
    bool isValidToken = Convert.ToBoolean(ViewBag.IsTokenValid);
    string showResetForm = isValidToken == true ? "" : "d-none";
    string showLinkExpired = isValidToken == false ? "" : "d-none";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Reset Password</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/superadmin-panel/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/Content/superadmin-panel/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/superadmin-panel/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!--Stylish Alert-->
    <link href="~/Content/lib/StylishAlert/iao-alert.css" rel="stylesheet" />
    <style>
        .error-class {
            color: red;
        }
    </style>
</head>
<body class="hold-transition login-page">
    <input type="hidden" id="hiddentoken" value="@ViewBag.ResetPasswordToken" />
    <div class="login-box">

        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <img class="img-cls-lg brand-image img-circle" style="width: 35%; margin-left: 110px;" src="@Resources.StaticResources.MasterzoneLogo" alt="MASTER ZONE">
                <p class="login-box-msg">Reset Password</p>

                <div id="sectionResetForm" class="@showResetForm">
                    <form>
                        <div class="input-group mb-3">
                            <input type="password" class="form-control" placeholder="Password" id="text_Password">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="error-class" id="error_text_Password"></div>
                        <div class="input-group mb-3">
                            <input type="password" class="form-control" placeholder="Confirm Password" id="text_ConfirmPassword">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="error-class" id="error_text_ConfirmPassword"></div>
                        <div class="row">
                            <div class="col-12">
                                <button type="button" id="btnSubmit" class="btn btn-primary btn-block" onclick="btnSubmitResetPasswordClick();">Submit</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>
                </div>
                <div id="sectionSuccessMessage" class="d-none">
                    <div class="col-sm-12 text-center">
                        <h4 class="frps-ls mb-4 text-success"><i class="fas fa-check-circle-o text-success"></i> Password reset successfull!</h4>
                    </div>
                </div>
                <div id="sectionLinkExpired" class="@showLinkExpired">
                    <div class="col-sm-12 text-center">
                        <h4 class="frps-ls mb-4 text-danger"><i class="fas fa-warning text-danger"></i> Link has been expired!</h4>
                    </div>
                </div>

                <p class="mt-3 mb-1">
                    <a href="/SuperAdmin/Login">Login</a>
                </p>
                <!-- <p class="mb-0">
                  <a href="register.html" class="text-center">Register a new membership</a>
                </p> -->
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/Content/superadmin-panel/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Content/superadmin-panel/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/superadmin-panel/dist/js/adminlte.min.js"></script>
    <!--Stylish-ALERT-->
    <script src="~/Content/lib/StylishAlert/iao-alert.jquery.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    @Html.Partial("/Views/Shared/ScriptPartials/SuperAdminPanel/_ManageResetPasswordScriptPartial.cshtml")


</body>
</html>