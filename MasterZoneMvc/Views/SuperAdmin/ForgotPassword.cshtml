@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Forgot Password</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/superadmin-panel/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/Content/superadmin-panel/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/superadmin-panel/dist/css/adminlte.min.css">
    <!--Stylish Alert-->
    <link href="~/Content/lib/StylishAlert/iao-alert.css" rel="stylesheet" />
    <style>
        .error-class {
            color: red;
        }
    </style>
</head>
<body class="hold-transition login-page">
    <div class="login-box">

        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <img class="img-cls-lg brand-image img-circle" style="width: 35%; margin-left: 110px;" src="@Resources.StaticResources.MasterzoneLogo" alt="MASTER ZONE">
                <p class="login-box-msg">Forgot Password</p>

                <div id="sectionForm">
                    <form>
                        <input type="hidden" id="returnURL" name="returnURL" value="@ViewBag.ReturnURL" />
                        <div class="input-group mb-3">
                            <input type="email" class="form-control" placeholder="Email" id="txtEmail">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <div class="error-class" id="error_txtEmail"></div>
                        @if (true || !String.IsNullOrEmpty(ViewBag.Message))
                        {
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="w-100 text-center text-danger">@ViewBag.Message</div>
                            </div>
                        }
                        <div class="row">
                            <div class="col-12">
                                <button type="button" id="btnSubmit" class="btn btn-primary btn-block" onclick="btnSubmitUserForgotPasswordClick();">Submit</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>
                </div>
                <div id="sectionEmailSent" class="d-none">
                    <div class="col-sm-12">
                        <h6 class="text-success">Link has been sent to your email for password reset.</h6>
                        <p id="resetPasswordLink"></p>
                    </div>
                </div>

                <p class="mt-3 mb-1">
                    <a href="/SuperAdmin/Login">Login</a>
                </p>
                <!-- <p class="mb-0">
                  <a href="register.html" class="text-center">Register a new membership</a>
                </p> -->
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/Content/superadmin-panel/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Content/superadmin-panel/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/superadmin-panel/dist/js/adminlte.min.js"></script>
    <!--Stylish-ALERT-->
    <script src="~/Content/lib/StylishAlert/iao-alert.jquery.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    @Html.Partial("/Views/Shared/ScriptPartials/SuperAdminPanel/_ManageForgotPasswordScriptPartial.cshtml")

</body>
</html>