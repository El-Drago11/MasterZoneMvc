@*------------------------------------- Edit Custom Form  Detials Modal ------------------------------------------------------ *@
<div class="modal fade" id="EditCustomFormModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header border-0">
                <h2 class="modal-title">Edit Custom Form</h2>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body pt-0">

                <input type="text" id="formNameInput" placeholder="Enter Form Name">
                <div class="sidenav">
                    <h2>Select Element</h2>
                    <button onclick="changeFormName()">Change Form Name</button>
                    <button onclick="addTextQuestion()">Input Button</button>
                    <button onclick="addSelectQuestion()"> Select Button</button>
                    <button onclick="addTextareaQuestion()"> Textarea Button</button>
                    <button onclick="addRadioQuestion()"> Radio Button </button>
                    <button onclick="addCheckboxQuestion()"> Checkbox Button </button>
                    <button onclick="addSubmitButton()"> Submit</button>

                </div>
                <div id="CustomFormDetailModal">

                    @* Data will be appended *@
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary" data-dismiss="modal" onclick="saveFormData();">Update</button>
                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
