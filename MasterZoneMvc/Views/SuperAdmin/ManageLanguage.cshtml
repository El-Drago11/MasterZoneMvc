                                            <tr>
                                                <th>SNo.</th>
                                                <th>Language  </th>
                                                <th>Image</th>
                                                <th class="text-center">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                        <tfoot>
                                            <tr>
                                                <th>SNo.</th>
                                                <th>Language  </th>
                                                <th>Image</th>
                                                <th class="text-center">Action</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

    </div>
</div>
<aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
</aside>



<div id="AddNewLanguage" style="display: none">
    <div class="wrapper">


        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 id="TochangeHeader">Manage Language</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="/SuperAdmin/Dashboard">Home</a></li>
                                <li class="breadcrumb-item active" id="pageUpTextChange">Add New Language</li>
                            </ol>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="card card-default">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-sm-9 d-flex align-items-center">
                                <h3 class="card-title" id="ToChangeTextTitle">Add New Language</h3>
                            </div>
                            <div class="col-sm-3 d-flex justify-content-end">
                                <button type="button" class="btn btn-sm btn-danger" onclick="ResetBusinessLanguageDetail();">
                                    Cancel
                                </button>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <form>


                                    <div class="form-group">
                                        <label for="Title">  Language Name</label>
                                        <input type="text" id="txtLanguage" class="form-control" />
                                        <div class="error-class" id="error_txtLanguage"></div>

                                    </div>
                                    <div class="form-group d-flex flex-column">
                                        <label> language Image</label>
                                        <div class="imageLanguagePreview">

                                            <img id="previewimageLanguagePreview" class="d-none" style="width:100%; height:100%;">
                                        </div>
                                        <input type="file" id="fileProfileImage_ManageLanguageImage" class="border form-control" accept="imageAbout/*">
                                        <div class="error-class" id="error_fileProfileImage_ManageLanguageImage"></div>
                                    </div>


                                </form>

                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary" id="ToChangeUpdateText" onclick="btnSubmitBusinessContentLanguageClick();">Save</button>
                            @*<button type="submit" class="btn btn-danger" id="ResetCancel" onclick="CancelbtnChange();">Cancel</button>*@
                            <button type="button" class="btn btn-danger" id="ResetCancelbtn" onclick="ResetBusinessLanguageDetail();">Cancel</button>
                        </div>
                        <!-- /.card-body -->
                        <!-- <div class="card-footer">
                          Visit <a href="https://select2.github.io/">Select2 documentation</a> for more examples and information about
                          the plugin.
                        </div> -->
                    </div>
                    <!-- /.card -->
                </div>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

    </div>
</div>



@section Scripts{

    <script src="~/Content/lib/StylishAlert/iao-alert.jquery.js"></script>
