
@{
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    ViewData["Title"] = "Manage Banner Item";
}

@section Styles{
    <style>
        .categoryIcon {
            width: 75px;
            height: 75px;
        }

        .categoryIconPreview {
            border: 2px dashed #cecece;
            height: 75px;
            width: 75px;
            margin: 5px 0px;
            padding: 5px;
        }
    </style>
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Manage Banner Item</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/SuperAdmin/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/SuperAdmin/ManageHomePage">Manage Home Page</a></li>
                        <li class="breadcrumb-item active">Manage Banner Item</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- View content -->
    <section class="content" id="sectionViewCategories_ManageBannerItem">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-sm-9 d-flex align-items-center">
                                    <h3 class="card-title">View Items</h3>
                                </div>
                                <div class="col-sm-3 d-flex justify-content-end">
                                    <button type="button" class="btn btn-primary" onclick="showAddUpdateSection();">
                                        &plus; Add New Item
                                    </button>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="tblBannerItems" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Type</th>
                                        <th>Thumbnail</th>
                                        <th>Video</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>Type</th>
                                        <th>Thumbnail</th>
                                        <th>Video</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /. View content -->
    <!-- Main content -->
    <section class="content d-none" id="sectionAddUpdateCategory_ManageBannerItem">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <!-- Default box -->
                    <div class="card card-default">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-sm-9 d-flex align-items-center">
                                    <h3 class="card-title">Add New</h3>
                                </div>
                                <div class="col-sm-3 d-flex justify-content-end">
                                    <button type="button" class="btn btn-sm btn-danger" onclick="btnClickCancel_ManageBannerItem();">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 ">
                                    <div class="form-group d-flex flex-column">
                                        <label>Type<span class="text-danger">*</span></label>
                                        <select id="ddlType_ManageBannerItem" class="border form-control" onchange="enableDisableFieldsByType()">
                                            <option value="Image">Image</option>
                                            <option value="Video">Video</option>
                                        </select>
                                        <div class="error-class" id="error_ddlType_ManageBannerItem"></div>
                                    </div>
                                    <!-- /.form-group -->
                                    <div class="form-group d-flex flex-column">
                                        <label>Youtube Video (embed link)<span class="text-danger"></span></label>
                                        <input type="text" id="txtVideo_ManageBannerItem" class="border form-control" disabled>
                                        <div class="error-class" id="error_txtVideo_ManageBannerItem"></div>
                                    </div>
                                    <!-- /.form-group -->
                                    <div class="form-group d-flex flex-column">
                                        <label>Image<span class="text-danger"></span></label>
                                        <div class="categoryIconPreview">
                                            <img id="thumbnail_ManageBannerItem" class="d-none" style="width:100%; height:100%;">
                                        </div>
                                        <input type="file" id="fileThumbnail_ManageBannerItem" class="border form-control" accept="image/*">
                                        <div class="error-class" id="error_fileThumbnail_ManageBannerItem"></div>
                                    </div>
                                    <!-- /.form-group -->
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group d-flex flex-column">
                                        <label>Text Link<span class="text-danger"></span></label>
                                        <input type="text" id="txtLink_ManageBannerItem" class="border form-control">
                                        <div class="error-class" id="error_txtLink_ManageBannerItem"></div>
                                    </div>
                                    <!-- /.form-group -->
                                    <div class="form-group d-flex flex-column">
                                        <label>Text<span class="text-danger"></span></label>
                                        <textarea type="text" id="txtText_ManageBannerItem" class="form-control" rows="2" maxlength="150"></textarea>
                                        <div class="error-class" id="error_txtText_ManageBannerItem"></div>
                                    </div>
                                    <!-- /.form-group -->
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group d-flex flex-column">
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" id="chkIsActive_ManageBannerItem" checked>
                                            <label class="form-check-label" for="chkIsActive_ManageBannerItem" style="cursor:pointer;">Is Active</label>
                                        </div>
                                    </div>
                                    <!-- /.form-group -->
                                </div>
                            </div>

                        </div>

                        <div class="card-footer">
                            <button type="button" class="btn btn-primary" onclick="AddUpdate_ManageBannerItem()">Save</button>
                            <button type="button" class="btn btn-danger" onclick="btnClickCancel_ManageBannerItem()">Cancel</button>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts {
    <script src="~/Scripts/js/Validation.js"></script>
    @Html.Partial("/Views/Shared/ScriptPartials/SuperAdminPanel/_ManageHomePageBannerItemScriptPartial.cshtml")
}
