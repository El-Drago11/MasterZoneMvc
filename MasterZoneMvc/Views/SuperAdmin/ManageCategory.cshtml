
@{
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    ViewData["Title"] = "Manage Categories";
}

@section Styles{
    <style>
        .categoryIcon {
            width: 75px;
            height: 75px;
        }

        .categoryIconPreview {
            border: 2px dashed #cecece;
            height: 75px;
            width: 75px;
            margin: 5px 0px;
            padding: 5px;
        }
    </style>
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Manage Categories</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/SuperAdmin/Dashboard">Home</a></li>
                        <li class="breadcrumb-item active">Manage Categories</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- View content -->
    <section class="content" id="sectionViewCategories_ManageCategories">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-sm-9 d-flex align-items-center">
                                    <h3 class="card-title">View Categories</h3>
                                </div>
                                <div class="col-sm-3 d-flex justify-content-end">
                                    <button type="button" class="btn btn-primary" onclick="showAddUpdateCategorySection();">
                                        &plus; Add New Category
                                    </button>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="tblBusinessCategories" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Parent Category</th>
                                        <th>Icon</th>
                                        <th>Category Name</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>Parent Category</th>
                                        <th>Icon</th>
                                        <th>Category Name</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /. View content -->
    <!-- Main content -->
    <section class="content d-none" id="sectionAddUpdateCategory_ManageCategories">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <!-- Default box -->
                    <div class="card card-default">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-sm-9 d-flex align-items-center">
                                    <h3 class="card-title">Add New Category</h3>
                                </div>
                                <div class="col-sm-3 d-flex justify-content-end">
                                    <button type="button" class="btn btn-sm btn-danger" onclick="btnClickCancel_ManageCategories();">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 ">
                                    <div class="form-group">
                                        <label>Select Parent Category</label>
                                        <select id="ddlParentBusinessCategory_ManageCategories" class="form-control select2" style="width: 100%;" onchange="onChangeParentCategroy();">
                                            <option value="0" selected="selected">Select Category</option>
                                        </select>
                                        <div class="error-class" id="error_ddlParentBusinessCategory_ManageCategories"></div>
                                    </div>
                                    <!-- /.form-group -->
                                    <div class="form-group d-flex flex-column">
                                        <label>Category Name<span class="text-danger">*</span></label>
                                        <input type="text" id="txtCategoryName_ManageCategories" class="border form-control">
                                        <div class="error-class" id="error_txtCategoryName_ManageCategories"></div>
                                    </div>
                                    <!-- /.form-group -->
                                    <div class="form-group d-flex flex-column">
                                        <label>Category Icon<span class="text-danger">*</span></label>
                                        <div class="categoryIconPreview">
                                            <img id="previewImage" class="d-none" style="width:100%; height:100%;">
                                        </div>
                                        <input type="file" id="fileCategoryImage_ManageCategories" class="border form-control" accept="image/*">
                                        <div class="error-class" id="error_fileCategoryImage_ManageCategories"></div>
                                    </div>
                                    <!-- /.form-group -->
                                    <div class="form-group d-flex flex-column">
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" id="chkIsActive_ManageCategories" checked>
                                            <label class="form-check-label" for="chkIsActive_ManageCategories" style="cursor:pointer;">Is Active</label>
                                        </div>
                                    </div>
                                    <!-- /.form-group -->
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Category Key<span class="text-danger">*</span></label>
                                        <select id="ddlBusinessCategoryKey_ManageCategories" class="form-control select2" style="width: 100%;">
                                            <option value="0" selected="selected">Select Key</option>
                                            <option value="individual">Individual (For New Individual Parent Category)</option>
                                            <option value="b2b">B2B (For New B2B Parent Category)</option>
                                            <option value="instructor">Instructor/Teacher/Coach (Use For Individual)</option>
                                            <option value="other">Other</option>
                                        </select>
                                        <div class="error-class" id="error_ddlBusinessCategoryKey_ManageCategories"></div>
                                    </div>
                                    <div class="form-group">
                                        <label>Profile Page Template<span class="text-danger">*</span></label>
                                        <select id="ddlProfilePageTypeId_ManageCategories" class="form-control select2" style="width: 100%;">
                                            <option value="0" selected="selected">Select Profile Template</option>
                                        </select>
                                        <div class="error-class" id="error_ddlProfilePageTypeId_ManageCategories"></div>
                                    </div>
                                    <div class="form-group">
                                        <label>Menu Tag</label>
                                        <select id="ddlCategoryMenuTag_ManageCategories" class="form-control select2" style="width: 100%;">
                                            <option value="0" selected="selected">Select Menu Tag</option>
                                        </select>
                                        <div class="text-extra-small text-muted">Home-Page menu tag in which this category records will be visible.</div>
                                        <div class="error-class" id="error_ddlCategoryMenuTag_ManageCategories"></div>
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->

                        </div>

                        <div class="card-footer">
                            <button type="button" id="btnSave_ManageCategories" class="btn btn-primary" onclick="AddUpdate_ManageCategories()">Save</button>
                            <button type="button" id="btnCancel_ManageCategories" class="btn btn-danger" onclick="btnClickCancel_ManageCategories()">Cancel</button>
                        </div>
                        <!-- /.card-body -->
                        <!-- <div class="card-footer">
                          Visit <a href="https://select2.github.io/">Select2 documentation</a> for more examples and information about
                          the plugin.
                        </div> -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts {

    <!-- Select2 -->
    <script src="/Content/superadmin-panel/plugins/select2/js/select2.full.min.js"></script>

    <script>
        $(function () {
            $('.select2').select2();
        });
    </script>

    @Html.Partial("/Views/Shared/ScriptPartials/SuperAdminPanel/_ManageCategoriesScriptPartial.cshtml")
}
