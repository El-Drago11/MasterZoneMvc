<style>
    .previewimageUniversityImagePreview {
        width: 75px;
        height: 75px;
    }

    .imageUniversityImagePreview {
        border: 2px dashed #cecece;
        height: 75px;
        width: 75px;
        margin: 5px 0px;
        padding: 5px;
    }

    .previewimageUniversityLogoPreview {
        width: 75px;
        height: 75px;
    }

    .imageUniversityLogoPreview {
        border: 2px dashed #cecece;
        height: 75px;
        width: 75px;
        margin: 5px 0px;
        padding: 5px;
    }
