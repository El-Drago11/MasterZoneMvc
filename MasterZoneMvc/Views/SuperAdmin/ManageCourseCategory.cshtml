    </div>
</div>
<aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
</aside>



<div id="AddNewCourseCategory" style="display: none">
    <div class="wrapper">


        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 id="TochangeHeader">Manage Course Category</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="/SuperAdmin/Dashboard">Home</a></li>
                                <li class="breadcrumb-item active" id="pageUpTextChange">Add New Course Category</li>
                            </ol>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="card card-default">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-sm-9 d-flex align-items-center">
                                <h3 class="card-title" id="ToChangeTextTitle">Add New Course Category</h3>
                            </div>
                            <div class="col-sm-3 d-flex justify-content-end">
                                <button type="button" class="btn btn-sm btn-danger" onclick="ResetBusinessCourseCategoryDetail();">
                                    Cancel
                                </button>
                            </div>
                        </div>
                        
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <form>
                                    <div class="form-group d-flex flex-column">
                                        <label> Course Category Image</label>
                                        <div class="imageCourseCategoryImagePreview">

                                            <img id="previewimageCourseCategoryImagePreview" class="d-none" style="width:100%; height:100%;">
                                        </div>
                                        <input type="file" id="fileProfileImage_ManageCourseCategoryImage" class="border form-control" accept="imageAbout/*">
                                        <div class="error-class" id="error_fileProfileImage_ManageCourseCategoryImage"></div>
                                    </div>
                                    <div class="form-group">
                                    <label for="Title">  Title</label>
                                    <input type="text" id="txtTitle" class="form-control" />
                                    <div class="error-class" id="error_txtTitle"></div>

                                </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="description"> Description</label>
                                            <textarea name="description" class="form-control" rows="6" id="text_description" style="width: 211%;"></textarea>
                                            <div class="error-class" id="error_text_description"></div>
                                        </div>
                                    </div>
                                  

                                </form>

                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary" id="ToChangeUpdateText" onclick="btnSubmitBusinessContentCourseCategoryClick();">Save</button>
                            @*<button type="submit" class="btn btn-danger" id="ResetCancel" onclick="CancelbtnChange();">Cancel</button>*@
                            <button type="button" class="btn btn-danger" id="ResetCancelbtn" onclick="ResetBusinessCourseCategoryDetail();">Cancel</button>
                        </div>
                        <!-- /.card-body -->
                        <!-- <div class="card-footer">
                          Visit <a href="https://select2.github.io/">Select2 documentation</a> for more examples and information about
                          the plugin.
                        </div> -->
                    </div>
                    <!-- /.card -->
                </div>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

    </div>
</div>



