
@{
    ViewBag.Title = "Manage Event Category";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}


@section Styles{
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Manage Event Categories</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/SuperAdmin/Dashboard">Home</a></li>
                        <li class="breadcrumb-item active">Manage Event Categories</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- View content -->
    <section class="content" id="sectionViewEventCategories_ManageCategories">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-sm-9 d-flex align-items-center">
                                    <h3 class="card-title">View Event Categories</h3>
                                </div>
                                <div class="col-sm-3 d-flex justify-content-end">
                                    <button type="button" class="btn btn-primary" onclick="showAddUpdateEventCategorySection();">
                                            &plus; Add New Event Category
                                        </button>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="tblEventCategories" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Sno.</th>
                                        <th>Category Name</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Sno.</th>
                                        <th>Category Name</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <section class="content d-none" id="sectionAddUpdateEventCategory_ManageCategories">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <!-- Default box -->
                    <div class="card card-default">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-sm-9 d-flex align-items-center">
                                    <h3 class="card-title">Add New Event Category</h3>
                                </div>
                                <div class="col-sm-3 d-flex justify-content-end">
                                    <button type="button" class="btn btn-sm btn-danger" onclick="btnClickCancel_ManageEventCategories();">
                                       Cancel
                                   </button>
                                </div>
                            </div>

                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 ">

                                    <!-- /.form-group -->
                                    <div class="form-group d-flex flex-column">
                                        <label>Event Category Name<span class="text-danger">*</span></label>
                                        <input type="text" id="txtcategoryName" class="border form-control">
                                        <div class="error-class" id="error_txtcategoryName"></div>
                                    </div>

                                    <!-- /.form-group -->
                                    <div class="form-group d-flex flex-column">
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" id="chkIsActive_ManageEventCategories" checked>
                                            <label class="form-check-label" for="chkIsActive_ManageEventCategories" style="cursor:pointer;">Is Active</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="button" id="btnSave_ManageCategories" class="btn btn-primary" onclick="AddUpdate_ManageEventCategory()">Save</button>
                            <button type="button" id="btnCancel_ManageCategories" class="btn btn-danger" onclick="btnClickCancel_ManageEventCategories()">Cancel</button>
                        </div>
                        <!-- /.card-body -->
                        <!-- <div class="card-footer">
                          Visit <a href="https://select2.github.io/">Select2 documentation</a> for more examples and information about
                          the plugin.
                        </div> -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts {

    <!-- Select2 -->
    <script src="/Content/superadmin-panel/plugins/select2/js/select2.full.min.js"></script>
    <script src="~/Content/lib/StylishAlert/iao-alert.jquery.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        $(function () {
            $('.select2').select2();
        });
    </script>
    @Html.Partial("/Views/Shared/ScriptPartials/SuperAdminPanel/_ManageEventCategoryScriptPartial.cshtml")

}







































