                                    <hr />
                                    <form class="form-horizontal">


                                        <div class="row">
                                            <div class="col-sm-6">
                                                <label>Masterzone Logo<span class="text-danger">*</span></label>
                                                <div class="MasterLogoPreview">
                                                    <img id="Masterlogo" class="d-none" style="width:100%; height:100%;">
                                                </div>
                                                <input type="file" id="fileMasterlogo_ManageSuperAdmin" class="border form-control" accept="image/*">
                                                <div class="error-class" id="error_fileMasterlogo_ManageSuperAdmin"></div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-6 m-3">
                                                <button type="submit" class="btn btn-danger">Submit</button>
                                            </div>
                                        </div>


                                    </form>


                                </div>
                            </div>
                        </div>*@
                </div>

            </div><!-- /.container-fluid -->
        </section>

    </div>

</main>
