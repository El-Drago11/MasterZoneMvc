

@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Forgot Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link rel="stylesheet" href="~/Content/business-panel/font/iconsmind-s/css/iconsminds.css" />
    <link rel="stylesheet" href="~/Content/business-panel/font/simple-line-icons/css/simple-line-icons.css" />
    <link rel="stylesheet" href="~/Content/business-panel/css/vendor/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/business-panel/css/vendor/bootstrap.rtl.only.min.css" />
    <link rel="stylesheet" href="~/Content/business-panel/css/vendor/bootstrap-float-label.min.css" />
    <link rel="stylesheet" href="~/Content/business-panel/css/main.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!--Stylish Alert-->
    <link href="~/Content/lib/StylishAlert/iao-alert.css" rel="stylesheet" />
    <style>
        .error-class {
            color: red;
        }
    </style>
</head>

<body class="background show-spinner no-footer">
    <div class="fixed-background"></div>
    <main>
        <div class="container">
            <div class="row h-100">
                <div class="col-12 col-md-10 mx-auto my-auto">
                    <div class="card auth-card">
                        <div class="position-relative image-side " style="display: flex; justify-content: center; align-items: center; box-shadow: 2px 7px 9px -2px #ccc" ;
                             justify-content: center;
                             align-items: center;">
                            <!-- <p class=" text-white h2">MAGIC IS IN THE DETAILS</p>
                            <p class="white mb-0">
                                Please use your e-mail to reset your password.
                                <br>If you are not a member, please
                                <a href="#" class="white">register</a>.
                            </p> -->
                            <img src="@Resources.StaticResources.MasterzoneLogo" style=" height: 20rem;">
                        </div>
                        <div class="form-side frml">
                            <a href="/">
                                <div class="lg pb-5">
                                    @*<img src="@Resources.StaticResources.MasterzoneLogo" style="box-shadow: 0 10px 20px rgba(0,0,0,.19),0 6px 6px rgba(0,0,0,.23)!important; border-radius: 50%;">*@
                                    <span class="brand-text font-weight-light text-large font-weight-normal">MASTER ZONE</span>
                                </div>
                            </a>
                            <h6 class="mb-4">Forgot Password</h6>
                            <div id="sectionForm">
                                <form>
                                    <input type="hidden" id="returnURL" name="returnURL" value="@ViewBag.ReturnURL" />
                                    <label class="form-group has-float-label mb-4">
                                        <input class="form-control" id="txtEmail" type="text" />
                                        <span>E-mail</span>
                                        <div class="error-class" id="error_txtEmail"></div>
                                    </label>
                                    @if (true || !String.IsNullOrEmpty(ViewBag.Message))
                                    {
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="w-100 text-center text-danger">@ViewBag.Message</div>
                                        </div>
                                    }
                                    <div class="d-flex justify-content-end align-items-center justify-content-center">
                                        <button class="btn btn-primary btn-lg btn-shadow" type="button" onclick="btnSubmitForgotPasswordClick();">RESET PASSWORD</button>

                                    </div>
                                </form>
                            </div>
                            <div id="sectionEmailSent" class="d-none">
                                <div class="col-sm-12">
                                    <h6 class="text-success">Link has been sent to your email for password reset.</h6>
                                    <p id="resetPasswordLink"></p>
                                </div>
                            </div>
                            <div class="text-center pt-4"><a class="hvc" href="/Business/Login"><i class="fas fa-arrow-left pr-1"></i> Back to log in</a></div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

<script src="/Content/business-panel/js/vendor/jquery-3.3.1.min.js"></script>
<script src="/Content/business-panel/js/vendor/bootstrap.bundle.min.js"></script>
<script src="/Content/business-panel/js/dore.script.js"></script>
<script src="/Content/business-panel/js/scripts.js"></script>
<script src="/Scripts/js/loader.js"></script>
<script src="~/Content/lib/StylishAlert/iao-alert.jquery.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

@Html.Partial("/Views/Shared/ScriptPartials/BusinessPanel/_ManageForgotPasswordScriptPartial.cshtml")

</body>
</html>