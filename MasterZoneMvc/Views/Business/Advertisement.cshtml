@using MasterZoneMvc.ViewModels;

@{
    Layout = "~/Views/Shared/_BusinessAdminLayout.cshtml";
    ViewData["Title"] = "Advertisement";
    int IsBusinessOwnerPrimeMember = (int)ViewBag.IsBusinessOwnerPrimeMember;

    var UserRole = Context.Items["UserRole"] as string;

    string ControllerNameForLinks = (UserRole == "BusinessAdmin") ? "Business" : "Staff";
    var Permissions = Context.Items["Permissions"] as List<PermissionHierarchy_VM>;
    List<PermissionHierarchy_VM> permissions = Permissions;
    List<string> permissionKeys = new List<string>();
    if (permissions.Count() > 0)
    {
        permissionKeys = permissions.Select(p => p.KeyName).ToList();
    }
}

<style>
    .Image {
        width: 75px;
        height: 75px;
    }


    .imagePreview {
        border: 2px dashed #cecece;
        height: 200px;
        margin: 5px 0px;
        padding: 5px;
    }

    #ProfileImage {
        height: 100%;
    }
</style>

<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-8">
                        <h1 class="pageHeadingText" id="pageTextchange">Advertisements</h1>
                        <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
                            <ol class="breadcrumb pt-0">
                                <li class="breadcrumb-item">
                                    <a href="/Business/Advertisement">Home</a>
                                </li>
                                <li class="breadcrumb-item active pageHeadingText" aria-current="page" id="pageStageChange"> Advertisements</li>
                            </ol>
                        </nav>
                    </div>
                    @if (IsBusinessOwnerPrimeMember == 1 && permissionKeys.Contains("ManageAdvertisements_AddAdvertisements"))
                    {
                        <div class="col-4 text-right">
                            <a href="javascript:;" class="btn btn-primary btn-lg top-right-button mr-1" id="btnAddStaff">Add Advertisement</a>
                        </div>
                    }
                </div>
                <div class="separator mb-5"></div>
            </div>
        </div>
        @if (IsBusinessOwnerPrimeMember == 1)
        {


            @* <div id="sectionViewStaff" class="d-none">*@
            <div id="sectionViewStaff">
                <div class="row mb-4">
                    <div class="col-12 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <table id="tblAdvertisementView" class="data-table">
                                    <thead>
                                        <tr>
                                            <th>SNo.</th>
                                            <th>Image</th>
                                            @*<th>Advertisement Category</th>*@
                                            <th>Image Type</th>
                                            <th>Created On</th>
                                            <th>Status</th>
                                            <th class="text-center">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="sectionAddStaff" Style="display: none">
                <div class="row mb-4">
                    <div class="col-12 mb-4">
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="mb-4" id="myText">Add Advertisements</h5>
                                <form>
                                    <div class="form-group">
                                        <label>Image</label>
                                        <div class="imagePreview">
                                            <img id="ProfileImage" class="d-none">
                                        </div>

                                        <input type="file" id="fileProfileImage_ManageAdvertisement" class="border form-control" accept="image/*">
                                        <div class="error-class" id="error_fileProfileImage_ManageProfile"></div>
                                    </div>
                                    @*<div class="form-group">
            <label for="ddlAdvertisement_ManageCategory">select Advertisement Category</label>
            <select name="ddlAdvertisement_ManageCategory" id="ddlAdvertisement_ManageCategory" form="carform" default="unslected" class="form-control">
                <option value="0">Select Advertisement Category</option>
                <option value="Gym">Gym</option>
                <option value="Yoga">Yoga</option>

            </select>

            <div class="error-class" id="error_ddlAdvertisement_ManageCategory"></div>

        </div>*@
                                    <div class="form-group">
                                        <label for="ddlAdvertisement_ManageLink">Advertisement Link </label>
                                        <input type="text" name="ddlAdvertisement_ManageLink" id="ddlAdvertisement_ManageLink" class="form-control" />
                                        <div class="error-class" id="error_ddlAdvertisement_ManageLink"></div>
                                    </div>

                                    <div class="form-group">
                                        <label for="ddlAdvertisement_ManageAdvertisement"> Image Type</label>
                                        <select name="ddlAdvertisement_ManageAdvertisement" id="ddlAdvertisement_ManageAdvertisement" form="carform" default="unslected" class="form-control">
                                            <option value="0">Select Image Type</option>
                                            <option value="Horizontal">horizontal</option>
                                            <option value="Vertical">Vertical</option>

                                        </select>

                                        <div class="error-class" id="error_ddlAdvertisement_ManageAdvertisement"></div>

                                    </div>
                                    <div class="form-group d-flex flex-column">
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" id="chkIsActive_ManageAdvertisement" checked>
                                            <label class="form-check-label" for="chkIsActive_ManageAdvertisement" style="cursor:pointer;">Is Active</label>
                                        </div>
                                    </div>

                                    <button type="button" class="btn btn-primary mb-0" id="ChangeUpdateText" onclick="btnSubmitAdvertisementClick()">Save</button>
                                    <button type="button" id="ResetValues" class="btn btn-primary mb-0" onclick="ResetAddView()">Cancel</button>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
        else
        {
            <div id="sectionNotPrimeMember">
                <div class="row mb-4">
                    <div class="col-12 mb-4">
                        <div class="card">
                            <div class="card-body text-center h6">
                                Only <b>Prime Business Members</b> can Manage Advertisements!
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</main>


@section Scripts{
    @if (IsBusinessOwnerPrimeMember == 1)
    {
        @Html.Partial("/Views/Shared/ScriptPartials/BusinessPanel/_AdvertisementScriptPartial.cshtml")
    }
    <script src="~/Content/lib/StylishAlert/iao-alert.jquery.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
}