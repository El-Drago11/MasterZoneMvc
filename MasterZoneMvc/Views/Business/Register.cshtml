

@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>MASTER ZONE</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link rel="stylesheet" href="~/Content/business-panel/font/iconsmind-s/css/iconsminds.css" />
    <link rel="stylesheet" href="~/Content/business-panel/font/simple-line-icons/css/simple-line-icons.css" />

    <link rel="stylesheet" href="~/Content/business-panel/css/vendor/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/business-panel/css/vendor/bootstrap.rtl.only.min.css" />
    <link rel="stylesheet" href="~/Content/business-panel/css/vendor/bootstrap-float-label.min.css" />
    <link rel="stylesheet" href="~/Content/business-panel/css/main.css" />

    <!--Stylish Alert-->
    <link href="~/Content/lib/StylishAlert/iao-alert.css" rel="stylesheet" />

    <style>
        @@media only screen and (max-width: 800px) {

            body.background main {
                margin: 0 !important;
                height: 124% !important;
            }
        }

        .error-class {
            color: red;
        }
    </style>
</head>

<body class="background show-spinner no-footer">
    @Html.Partial("_LoaderPartial")
    <div class="fixed-background"></div>
    <main>
        <div class="container">
            <div class="row h-100">
                <div class="col-12 col-md-10 mx-auto my-auto">
                    <div class="card auth-card">
                        <div class="position-relative image-side " style="display: flex; justify-content: center; align-items: center; box-shadow: 2px 7px 9px -2px #ccc;">
                            <img src="@Resources.StaticResources.MasterzoneLogo" style="height: 20rem;">
                        </div>
                        <div class="form-side frml frml1">
                            <a href="/">
                                <div class="lg pb-5">
                                    @*<img src="@Resources.StaticResources.MasterzoneLogo" style="box-shadow: 0 10px 20px rgba(0,0,0,.19),0 6px 6px rgba(0,0,0,.23)!important; border-radius: 50%;">*@
                                    <span class="brand-text font-weight-light text-large font-weight-normal">
                                        MASTER
                                        ZONE
                                    </span>
                                </div>
                            </a>
                            <h6 class="mb-4">Register</h6>

                            <form>

                                <div class="row">
                                    <div class="col-md-12">
                                        <label class="form-group has-float-label mb-4">
                                            <input type="text" id="txtBusinessName" class="form-control" />
                                            <span>Business Name</span>
                                            <div class="error-class" id="error_txtBusinessName"></div>
                                        </label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="form-group has-float-label mb-4">
                                            <select name="ddlBusinessCategory" id="ddlBusinessCategory" form="carform" default="unslected" class="form-control" onchange="onParentCategoryChange();">
                                                <option value="0" selected disabled hidden>Select a Category</option>
                                                @*<option value="3">Instructor</option>*@
                                            </select>
                                            <span>Category</span>
                                            <div class="error-class" id="error_ddlBusinessCategory"></div>
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-group has-float-label mb-4">
                                            <select name="ddlBusinessCategorySub" id="ddlBusinessSubCategory" form="carform" default="unslected" class="form-control">
                                                <option value="0" selected disabled hidden>Select a Category</option>
                                            </select>
                                            <span>Sub Category</span>
                                            <div class="error-class" id="error_ddlBusinessSubCategory"></div>
                                        </label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="form-group has-float-label mb-4">
                                            <input type="text" id="txtFirstName" class="form-control" />
                                            <span>First Name</span>
                                            <div class="error-class" id="error_txtFirstName"></div>
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-group has-float-label mb-4">
                                            <input type="text" id="txtLastName" class="form-control" />
                                            <span>Last Name</span>
                                            <div class="error-class" id="error_txtLastName"></div>
                                        </label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <label class="form-group has-float-label mb-4">
                                            <input type="date" id="date_of_birth" class="form-control" />
                                            <span>Date Of Birth</span>
                                            <div class="error-class" id="error_date_of_birth"></div>
                                        </label>
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="form-group has-float-label mb-4">
                                            <input type="text" id="txtEmail" class="form-control" />
                                            <span>Email ID</span>
                                            <div class="error-class" id="error_txtEmail"></div>
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-group has-float-label mb-4">
                                            <input type="text" id="txtPhoneNumber" class="form-control" />
                                            <span>Contact No.</span>
                                            <div class="error-class" id="error_txtPhoneNumber"></div>
                                        </label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="form-group has-float-label mb-4">
                                            <input type="password" id="txtPassword" class="form-control" />
                                            <span>Password</span>
                                            <div class="error-class" id="error_txtPassowrd"></div>
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-group has-float-label mb-4">
                                            <input type="password" id="txtConfirmPassword" class="form-control" />
                                            <span>Confirm Password</span>
                                            <div class="error-class" id="error_txtConfirmPassword"></div>
                                        </label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-8" style="display:flex;">
                                        <div class="mt-1">
                                            <input type="checkbox" id="term_Conditon" value="1">
                                        </div>
                                        <div class="ml-2">
                                            <p>Is Term & Condition</p>
                                            <div class="error-class mb-3" id="error_checkboxmessage"></div>
                                        </div>
                                    </div>
                                </div>



                                <div class="d-flex justify-content-center align-items-center">
                                    <button type="button" id="btnRegister" class="btn btn-primary btn-lg btn-shadow" onclick="btnRegisterFormClick()" @*disabled*@>REGISTER</button>
                                </div>
                                @if (!String.IsNullOrEmpty(ViewBag.Message))
                                {
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="w-100 text-center text-danger">@ViewBag.Message</div>
                                    </div>
                                }
                                <div class="text-center pt-4">Have an account ? <a href="/Business/Login">Login</a></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="~/Content/business-panel/js/vendor/jquery-3.3.1.min.js"></script>
    <script src="~/Content/business-panel/js/vendor/bootstrap.bundle.min.js"></script>
    <script src="~/Content/business-panel/js/dore.script.js"></script>
    <script src="~/Content/business-panel/js/scripts.js"></script>

    <!--Stylish-ALERT-->
    <script src="~/Content/lib/StylishAlert/iao-alert.jquery.js"></script>

    <script src="~/Scripts/js/site.js"></script>
    <script src="~/Scripts/js/loader.js"></script>
    @* <script src="~/Scripts/js/business-panel/Register.js"></script>*@
    @Html.Partial("/Views/Shared/ScriptPartials/BusinessPanel/_RegisterScriptPartial.cshtml")
</body>

</html>
