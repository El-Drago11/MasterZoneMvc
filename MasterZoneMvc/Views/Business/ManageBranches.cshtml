
@{
    ViewBag.Title = "ManageBranches";
    Layout = "~/Views/Shared/_BusinessAdminLayout.cshtml";
}

@section Styles{
    <style>
        .Image {
            width: 25%;
            margin-left: 17px;
        }
    </style>
        }
   
   
<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-8">
                        <h1 class="pageHeadingText" id="pageTextchange">Manage Branches</h1>
                        <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
                            <ol class="breadcrumb pt-0">
                                <li class="breadcrumb-item">
                                    <a href="/Business/ManageBranches">Home</a>
                                </li>
                                <li class="breadcrumb-item active pageHeadingText" aria-current="page" id="pageStageChange"> Branches</li>
                            </ol>
                        </nav>
                    </div>

                    <div class="col-4 text-right">
                        <a href="javascript:;" class="btn btn-primary btn-lg top-right-button mr-1" id="btnAddBranches">Add New Branch</a>
                    </div>

                </div>
                <div class="separator mb-5"></div>
            </div>
        </div>
        <div id="sectionViewBranches">
            <div class="row mb-4">
                <div class="col-12 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <table id="tblBranchesView" class="data-table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Branch Name</th>
                                        <th>Business Name</th>
                                        <th>Owner Name</th>
                                        <th>Contact Number/Email</th>
                                        <th>Address</th>
                                        @*<th>Status</th>*@
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="sectionAddBranches" Style="display: none">
            <div class="row mb-4">
                <div class="col-12 mb-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="mb-4" id="myText">Add New Branch</h5>
                            <form>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="Category"> Category</label>
                                         
                                            <select name="ddlBusinessCategorySub" id="ddlBusinessSubCategory" form="carform" default="unslected" class="form-control">
                                                <option value="0" selected disabled hidden>Select a Category</option>
                                            </select>
                                            <div class="error-class" id="error_ddlBusinessSubCategory"></div>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="BranchName"> Branch Name</label>
                                            <input type="text" id="txtBranchName" class="form-control" />
                                            <div class="error-class" id="error_txtBranchName"></div>

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="Name"> First Name</label>
                                            <input type="text" id="txtFirstName" class="form-control" />
                                            <div class="error-class" id="error_txtFirstName"></div>

                                        </div>
                                    </div>
                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label for="Name"> Last Name</label>
                                            <input type="text" id="txtLastName" class="form-control" />
                                            <div class="error-class" id="error_txtLastName"></div>

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="Name">Email Id</label>
                                            <input type="text" id="txtEmail" class="form-control" />
                                            <div class="error-class" id="error_txtEmail"></div>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="Name">   Contact No.</label>
                                            <input type="number" id="txtPhoneNumber" class="form-control" />
                                            <div class="error-class" id="error_txtPhoneNumber"></div>

                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="Password"> Password</label>
                                            <input type="password" id="txtPassword" class="form-control" />
                                            <div class="error-class" id="error_txtPassowrd"></div>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="ConfirmPassword">Confirm Password</label>
                                            <input type="password" id="txtConfirmPassword" class="form-control" />
                                            <div class="error-class" id="error_txtConfirmPassword"></div>

                                        </div>
                                    </div>
                                </div>
                                @*<div class="form-group">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="chkIsActive_ManageBranches" checked>
                                        <label class="form-check-label" for="chkIsActive_ManageBranches" style="cursor:pointer;">Is Active</label>
                                    </div>
                                </div>*@
                                <div class="d-flex align-items-center">
                                    <button type="button" id="ChangeUpdateText" class="btn btn-primary  btn-shadow" onclick="btnBranchesFormClick()">Save</button>
                                    <button type="button" id="ResetValues" class="btn btn-primary mb-0  m-2 btn-shadow" onclick="ResetAddBranchesView()">Cancel</button>
                                </div>
                                @if (!String.IsNullOrEmpty(ViewBag.Message))
                                {
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="w-100 text-center text-danger">@ViewBag.Message</div>
                                    </div>
                                }

                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>


    </div>
</main>


@section Scripts{
    @Html.Partial("/Views/Shared/ScriptPartials/BusinessPanel/_ManageBranchesScriptPartial.cshtml")
<script src="/Scripts/js/loader.js"></script>
}