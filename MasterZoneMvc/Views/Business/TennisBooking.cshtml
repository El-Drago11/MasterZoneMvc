@using MasterZoneMvc.ViewModels;
@{
    ViewBag.Title = "Book Apartment";
    Layout = "~/Views/Shared/_BusinessAdminLayout.cshtml";
    var UserRole = Context.Items["UserRole"] as string;

    string ControllerNameForLinks = (UserRole == "BusinessAdmin") ? "Business" : "Staff";
    var Permissions = Context.Items["Permissions"] as List<PermissionHierarchy_VM>;
    List<PermissionHierarchy_VM> permissions = Permissions;
    List<string> permissionKeys = new List<string>();
    if (permissions.Count() > 0)
    {
        permissionKeys = permissions.Select(p => p.KeyName).ToList();
    }
}

@section Styles{
    <style>
        .Image {
            width: 50px;
            margin-left: 17px;
        }

        .nav-tabs .nav-item {
            margin-bottom: 8px;
            margin-left: 139px;
            font-weight: bold;
            font-size: larger;
        }

        .nav-tabs .nav-link.active::before {
            content: " ";
            background: #00365a;
            color: #fff;
            border-radius: 10px;
            position: absolute;
            width: calc(100% - 1rem);
            height: 5px;
            top: 37px;
            left: 50%;
            transform: translateX(-50%);
        }

        .nav-link {
            cursor: pointer;
        }

        a.btn.btn-sm.ml-4.acceptbtn {
            border: 0px solid;
            background: green;
            font-size: 15px;
            font-weight: 700;
            color: #fff;
        }

        a.btn.btn-sm.ml-4.rejectbtn {
            border: 0px solid;
            background: red;
            font-size: 15px;
            font-weight: 700;
            color: #fff;
        }
    </style>
}
<input type="hidden" id="hidden_BusinessOwnerLoginId" value="@ViewBag.BusinessOwnerLoginId" />
<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <h1 class="pageHeadingText" id="pageTextchange">Tennis Booking Request</h1>
                </div>
                <div class="separator mb-5"></div>
            </div>
        </div>
        <div class="tab-content">
            <div id="fav_Classes" class="tab-pane  fade active show p-3" role="tabpanel">
                <div class="row mb-4">
                    <div class="col-12 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <table id="tbltennisroomBookingDetails" class="data-table">
                                    <thead>
                                        <tr>
                                            <th>Sno.</th>
                                            <th>Room Name</th>
                                            <th>User Name</th>
                                            <th>Player Count</th>
                                            <th>Booking Date</th>
                                            <th>Time</th>
                                            <th>Request</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


@section Scripts{
    @Html.Partial("/Views/Shared/ScriptPartials/BusinessPanel/_TennisBookingSciptPartial.cshtml")
}
