                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="Rules"> Instructor Becomes </label>
                                            <div class="html-editor form-control" id="training_InstructorBecomes" style="height: 114px"></div>
                                            <div class="error-class" id="error_training_InstructorBecomes"></div>
                                        </div>

                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="Rules">Training Rules </label>
                                            <div class="html-editor form-control" id="training_Rules" style="height: 114px"></div>
                                            <div class="error-class" id="error_training_Rules"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="description">Additional Information</label>
                                            <div class="html-editor form-control" id="training_Additionaldescription" style="height: 114px"></div>
                                            <div class="error-class" id="error_training_Additionaldescription"></div>
                                        </div>
                                    </div>
                                </div>
                                <h2>Included With  Session</h2>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="Seats">Total Seats</label>
                                            <input type="number" class="form-control" id="txt_Seats" placeholder="Total Seats" required />
                                            <div class="error-class" id="error_txt_Seats"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="Lectures">Total Lectures</label>
                                            <input type="number" class="form-control" id="txt_Lectures" placeholder=" Lectures" required />
                                            <div class="error-class" id="error_txt_Lectures"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="Classes">Total Classes </label>
                                            <input type="number" class="form-control" id="txt_Classes" placeholder=" Classes" required />
                                            <div class="error-class" id="error_txt_Classes"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="ClassDays">Training Class Days </label>
                                            @*<input type="text" class="form-control" id="txt_ClassDays" placeholder="Class Days" required />*@

                                            <select id="ddlSelectedClassDays" class="form-control select2-multiple" data-placeholder="Select Class Days" multiple="multiple" data-width="100%">
                                                <optgroup label="Days Of Week">
                                                    <option value="Sunday">Sunday</option>
                                                    <option value="Monday">Monday</option>
                                                    <option value="Tuesday">Tuesday</option>
                                                    <option value="Wednesday">Wednesday</option>
                                                    <option value="Thursday">Thursday</option>
                                                    <option value="Friday">Friday</option>
                                                    <option value="Saturday">Saturday</option>
                                                </optgroup>
                                            </select>
                                            <div class="error-class" id="error_txt_ClassDays"></div>
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="Credits">Total Credits </label>
                                            <input type="number" class="form-control" id="txt_Credits" placeholder=" Credits" required />
                                            <div class="error-class" id="error_txt_Credits"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="Duration"> Duration</label>
                                            <input type="text" class="form-control" id="txt_Duration" placeholder=" Duration" required />
                                            <div class="error-class" id="error_txt_Duration"></div>
                                        </div>
                                    </div>
                                </div>

                                <button type="button" class="btn btn-primary mb-0" id="ChangeUpdateText" onclick="btnSubmitToTrainingInfo();">Save</button>
                                <a href="javascript:;" class="btn btn-primary mb-0" onclick="ResetAddView()">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</main>



