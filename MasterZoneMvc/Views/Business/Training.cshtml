                                            <label>Training Image</label>
                                            <div class="imagePreview">
                                                <img id="previewImage" class="d-none" style="width:100%; height:100%;">
                                            </div>
                                            <input type="file" id="fileTrainingImage" class="border form-control" accept="image/*">
                                        </div>
                                    </div>

                                </div>
                                <h2>What To Expect?</h2>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="description">Exceptation Description</label>
                                            <div class="html-editor form-control" id="training_exceptationdescription" style="height: 114px"></div>
                                            <div class="error-class" id="error_training_exceptationdescription"></div>
                                        </div>
                                    </div>
                                </div>
                                <h2>Become Instructor</h2>
