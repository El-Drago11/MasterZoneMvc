@using MasterZoneMvc.ViewModels;

@{
    Layout = "~/Views/Shared/_BusinessAdminLayout.cshtml";
    ViewData["Title"] = "Training Booking Detail";

    var UserRole = Context.Items["UserRole"] as string;

    string ControllerNameForLinks = (UserRole == "BusinessAdmin") ? "Business" : "Staff";
    var Permissions = Context.Items["Permissions"] as List<PermissionHierarchy_VM>;
    List<PermissionHierarchy_VM> permissions = Permissions;
    List<string> permissionKeys = new List<string>();
    if (permissions.Count() > 0)
    {
        permissionKeys = permissions.Select(p => p.KeyName).ToList();
    }
}

@section Styles{
    <link href="~/Content/custom/css/common.css" rel="stylesheet" />
    <style>
        .image {
            width: 75px;
            height: 75px;
        }

        .imagePreview {
            border: 2px dashed #cecece;
            height: 75px;
            width: 75px;
            margin: 5px 0px;
            padding: 5px;
        }

        .profile-img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
        }
    </style>
}

<input type="hidden" id="hidden_TrainingBookingId" value="@ViewBag.TrainingBookingId" />

<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-8">
                        <h1 class="pageHeadingText" id="pageTextchange">Training Booking Detail</h1>
                        <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
                            <ol class="breadcrumb pt-0">
                                <li class="breadcrumb-item">
                                    <a href="/Business/Training">Trainings</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a id="linkTrainingBooking" href="/Business/ViewTrainingBooking?trainingId=0">Training Bookings</a>
                                </li>
                                <li class="breadcrumb-item active pageHeadingText" aria-current="page" id="pageStageChange">Booking Detail</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="separator mb-5"></div>
            </div>
        </div>

        <div id="sectionViewRequest">
            <div class="row mb-4">
                <div class="col-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h3>Booking Detail</h3>
                            <hr/>
                            <div class="row">
                                <div class="col-12">
                                    <div id="sectionBookingDetail">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <h3>Order Summary</h3>
                                    <hr/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div id="sectionOrderDetails">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</main>

@section Scripts{

    @Html.Partial("/Views/Shared/ScriptPartials/BusinessPanel/_TrainingBookingDetailScriptPartial.cshtml")
}


