@using MasterZoneMvc.ViewModels;
@{
    ViewBag.Title = "Apartment Booking Detail";
    Layout = "~/Views/Shared/_BusinessAdminLayout.cshtml";
    var UserRole = Context.Items["UserRole"] as string;

    string ControllerNameForLinks = (UserRole == "BusinessAdmin") ? "Business" : "Staff";
    var Permissions = Context.Items["Permissions"] as List<PermissionHierarchy_VM>;
    List<PermissionHierarchy_VM> permissions = Permissions;
    List<string> permissionKeys = new List<string>();
    if (permissions.Count() > 0)
    {
        permissionKeys = permissions.Select(p => p.KeyName).ToList();
    }
}

@section Styles {
    <style>
        .user-img {
            width: 50px;
            height: 50px;
            object-fit: contain;
        }

        .user-img-lg {
            width: 80px;
            height: 80px;
            object-fit: contain;
        }

        .trainer-img {
            width: 60px;
            height: 60px;
            object-fit: contain;
        }

        .custom-border-dashed {
            border: 3px dashed #808080;
        }

        .block-user-detail {
            cursor:pointer;
        }

        .block-user-detail:hover, .block-user-detail-active {
            background: var(--theme-color-4);
            color: #fff;
        }

        #apartmentBookedActivityList {
            height:250px;
            overflow-y: scroll;
        }

        .data-activity {
            cursor: pointer;
        }

        .data-activity:hover {
            background: var(--theme-color-1);
            color:#fff;
        }

        /* Slim scroll -----------------*/
        /* scrollbar */
        ::-webkit-scrollbar {
            width: 5px;
            height: 5px;
        }

        ::-webkit-scrollbar-track {
            -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
            -webkit-border-radius: 10px;
            border-radius: 10px;
        }

        ::-webkit-scrollbar-thumb {
            -webkit-border-radius: 10px;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.3);
            -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.5);
        }

            ::-webkit-scrollbar-thumb:window-inactive {
                background: rgba(255, 255, 255, 0.3);
            }
        /* Slim scroll -----------------*/
    </style>
}

