
@{
    Layout = "~/Views/Shared/_BusinessAdminLayout.cshtml";
    ViewData["Title"] = "Certificate";
}



<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-8">
                        <h1 class="pageHeadingText" id="pageTextchange">Verify Certificate</h1>
                        <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
                            <ol class="breadcrumb pt-0">
                                <li class="breadcrumb-item">
                                    <a href="/Business/Dashboard">Home</a>
                                </li>
                                <li class="breadcrumb-item active pageHeadingText" aria-current="page" id="pageStageChange"> Verify Certificate</li>
                            </ol>
                        </nav>
                    </div>
                   
                </div>
                <div class="separator mb-5"></div>
            </div>
        </div>

        <div id="sectionViewStaff">
            <div class="row mb-4">
                <div class="col-12 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <form>
                                <div class="form-group">
                                    <label for="txtCertificateNumber">Certificate Number</label>
                                    <input type="text" id="txtCertificateNumber" class="form-control" />
                                    <div class="error-class" id="error_txtCertificateNumber"></div>
                                </div>

                                <button type="button" class="btn btn-primary mb-0" onclick="btnSubmitVerifyCertifiate()">Verify</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-12 mb-4">
                    <div id="divViewCertificate">
                        @*<object data="~/Content/Uploads/Certificates/developer's%20guide%20to%20microsoft%20enterprise%20library%20-%202nd%20edition.pdf" type="application/pdf" width="100%" height="500px">
                            <p>Unable to display PDF file. <a href="~/Content/Uploads/Certificates/developer's%20guide%20to%20microsoft%20enterprise%20library%20-%202nd%20edition.pdf">Download</a> instead.</p>
                        </object>*@
                    </div>
                </div>
            </div>
        </div>

    </div>
</main>



@section Scripts{
    @Html.Partial("~/Views/Shared/ScriptPartials/BusinessPanel/_VerifyCertificateScriptPartial.cshtml")
}