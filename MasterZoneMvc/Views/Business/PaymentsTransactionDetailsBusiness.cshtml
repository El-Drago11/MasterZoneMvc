@{
    ViewBag.Title = "Payments/Transaction Details";
    Layout = "~/Views/Shared/_BusinessAdminLayout.cshtml";
}

@section Styles{
    <!-- DataTables -->
    <link rel="stylesheet" href="~/Content/superadmin-panel/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Content/superadmin-panel/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Content/superadmin-panel/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">

    <style>
        #tblPaymentsView_Business_wrapper .dt-buttons {
            float: right;
            margin-top: -23px;
        }

        div.dataTables_wrapper div.dataTables_filter {
            margin-top: 22px;
        }
    </style>
}

<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-8">
                        <h1 class="pageHeadingText" id="pageTextchange">Payments/Transaction</h1>
                        <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
                            <ol class="breadcrumb pt-0">
                                <li class="breadcrumb-item">
                                    <a href="/Business/Dashboard">Home</a>
                                </li>
                                <li class="breadcrumb-item active pageHeadingText" aria-current="page" id="pageStageChange"> Payments/Transaction</li>
                            </ol>
                        </nav>
                    </div>

                </div>
                <div class="separator mb-5"></div>
            </div>
        </div>

        @* <div id="sectionViewStaff" class="d-none">*@
        <div id="sectionViewEvent">
            <div class="row mb-4">
                <div class="col-12 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <table id="tblPaymentsView_Business" class="data-table">
                                <thead>
                                    <tr>
                                        <th>s.no</th>
                                        <th>CreatorOn</th>
                                        <th>Name</th>
                                        <th>Transaction Id</th>
                                        <th>Method</th>
                                        <th>Amonut</th>
                                        <th>Payment Against</th>
                                        <th>Total Discount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    </div>
</main>

