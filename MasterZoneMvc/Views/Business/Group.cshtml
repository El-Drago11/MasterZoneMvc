@using MasterZoneMvc.ViewModels;

@{
    Layout = "~/Views/Shared/_BusinessAdminLayout.cshtml";
    ViewData["Title"] = "Group";
    var UserRole = Context.Items["UserRole"] as string;

    string ControllerNameForLinks = (UserRole == "BusinessAdmin") ? "Business" : "Staff";
    var Permissions = Context.Items["Permissions"] as List<PermissionHierarchy_VM>;
    List<PermissionHierarchy_VM> permissions = Permissions;
    List<string> permissionKeys = new List<string>();
    if (permissions.Count() > 0)
    {
        permissionKeys = permissions.Select(p => p.KeyName).ToList();
    }
}

@section Styles{
    <style>
        .image {
            width: 75px;
            height: 75px;
        }

        .imagePreview {
            border: 2px dashed #cecece;
            height: 75px;
            width: 75px;
            margin: 5px 0px;
            padding: 5px;
        }

        .profile-img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
        }
    </style>
}

<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-8">
                        <h1 class="pageHeadingText" id="pageTextchange">Group</h1>
                        <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
                            <ol class="breadcrumb pt-0">
                                <li class="breadcrumb-item">
                                    <a href="/Business/Group">Home</a>
                                </li>
                                <li class="breadcrumb-item active pageHeadingText" aria-current="page" id="pageStageChange"> Group</li>
                            </ol>
                        </nav>
                    </div>
                    @if (permissionKeys.Contains("ManageGroups_AddGroups"))
                    {
                        <div class="col-4 text-right">
                            <a href="javascript:;" class="btn btn-primary btn-lg top-right-button mr-1" id="btnAddGroup">Add Group</a>
                        </div>
                    }
                </div>
                <div class="separator mb-5"></div>
            </div>
        </div>

        @* <div id="sectionViewStaff" class="d-none">*@
        <div id="sectionViewGroup">
            <div class="row mb-4">
                <div class="col-12 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <table id="tblGroups" class="data-table">
                                <thead>
                                    <tr>
                                        <th>SNo.</th>
                                        <th>Group Image</th>
                                        <th>Group Type</th>
                                        <th>Group Name</th>
                                        <th>Description</th>
                                        <th>Created On</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="sectionAddGroup" Style="display: none">
            <div class="row mb-4">
                <div class="col-12 mb-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="mb-4" id="myText">Add Group</h5>
                            <form>
                                <div class="form-group d-flex flex-column">
                                    <label>Group Image</label>
                                    <div class="imagePreview">
                                        <img id="previewGroupImage" class="d-none" style="width:100%; height:100%;">
                                    </div>
                                    <input type="file" id="fileGroupImage_ManageGroup" class="border form-control" accept="image/*">
                                    <div class="error-class" id="error_fileGroupImage_ManageGroup"></div>
                                </div>

                                <div class="form-group">
                                    <label for="Name">Name</label>
                                    <input type="text" id="txtGroupName" class="form-control" />
                                    <div class="error-class" id="error_txtGroupName"></div>
                                </div>

                                <div class="form-group">
                                    <label for="txtDescriptionMessage">Description</label>
                                    <textarea type="text" id="txtDescriptionMessage" class="form-control"></textarea>
                                    <div class="error-class" id="error_txtDescriptionMessage"></div>
                                </div>
                                <div class="form-group">
                                <label for="groupType">Select Group Type</label>
                                <select id="groupType" class="form-control" data-width="100%">
                                    <option disabled selected>Select Group Type</option>
                                    <option value="g_class">Class</option>
                                    <option value="g_course">Course</option>
                                </select>
                                <div class="error-class" id="error_ddlSelectedStudents"></div>
                                </div>
                                <!--<div class="form-group">
                                    <label>Select Students</label>
                                    <select id="ddlSelectedStudents" class="form-control select2-multiple" multiple="multiple" data-width="100%">-->
                                                            @*<option label="&nbsp;">&nbsp;</option>*@
                                                            <!--</select>
                                    <div class="error-class" id="error_ddlSelectedStudents"></div>
                                </div>-->

                                <button type="button" class="btn btn-primary mb-0" id="ChangeUpdateText" onclick="btnSubmitGroupForm()">Save</button>
                                <a href="javascript:;" class="btn btn-primary mb-0" onclick="ResetAddUpdateForm()">Cancel</a>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</main>



