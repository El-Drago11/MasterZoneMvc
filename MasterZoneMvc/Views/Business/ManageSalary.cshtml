        @*------------------------------------- Modal ------------------------------------------------------ *@
        <button type="button" id="btnOpenSalaryModal" class="btn btn-outline-primary mb-2 d-none" data-toggle="modal" data-target="#salaryModal">Edit Salary</button>
        <div class="modal fade" id="salaryModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="salaryModalLabel">Edit Salary</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label for="txtStaff_SalaryModal" class="col-form-label">Staff:</label>
                                <input type="text" class="form-control" id="txtStaff_SalaryModal" disabled>
                                <div class="error-class error-SalaryModal" id="error_txtStaff_SalaryModal"></div>
                            </div>
                            <div class="form-group">
                                <label for="txtSalary_SalaryModal" class="col-form-label">Basic Salary:</label>
                                <input type="number" class="form-control" id="txtSalary_SalaryModal" min="0">
                                <div class="error-class error-SalaryModal" id="error_txtSalary_SalaryModal"></div>
                            </div>
                            <div class="form-group">
                                <label for="txtHRA_SalaryModal" class="col-form-label">HRA (House Rent Allowance):</label>
                                <input type="number" class="form-control" id="txtHRA_SalaryModal" min="0">
                                <div class="error-class error-SalaryModal" id="error_txtHRA_SalaryModal"></div>
                            </div>
                            <div class="form-group">
                                <label for="txtTA_SalaryModal" class="col-form-label">TA (Travelling Allowance):</label>
                                <input type="number" class="form-control" id="txtTA_SalaryModal" min="0">
                                <div class="error-class error-SalaryModal" id="error_txtTA_SalaryModal"></div>
                            </div>
                            <div class="form-group">
                                <label for="txtDA_SalaryModal" class="col-form-label">DA (Dearness Allowance):</label>
                                <input type="number" class="form-control" id="txtDA_SalaryModal" min="0">
                                <div class="error-class error-SalaryModal" id="error_txtDA_SalaryModal"></div>
                            </div>
                            <div class="form-group">
                                <label for="txtRemarks_SalaryModal" class="col-form-label">Remarks:</label>
                                <textarea class="form-control" id="txtRemarks_SalaryModal"></textarea>
                                <div class="error-class error-SalaryModal" id="error_txtRemarks_SalaryModal"></div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="btnCancel_SalaryModal" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" onclick="btnUpdate_SalaryModal()">Update</button>
                    </div>
                </div>
            </div>
        </div>
