<h2>Sponsors</h2>
@section Styles{
    <style>
        .image {
            width: 75px;
            height: 75px;
        }

        .imagePreview {
            border: 2px dashed #cecece;
            height: 75px;
            width: 75px;
            margin: 5px 0px;
            padding: 5px;
        }
    </style>
}



<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-8">
                        <h1 class="pageHeadingText" id="pageTextchange">View Sponsor</h1>
                        <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
                            <ol class="breadcrumb pt-0">
                                <li class="breadcrumb-item">
                                    <a href="/Business/Sponsors">Manage Sponsor</a>

                                </li>
                                <li class="breadcrumb-item active pageHeadingText" aria-current="page" id="pageStageChange"> ViewSponsor</li>
                            </ol>
                        </nav>
                    </div>
                   
                        <div class="col-4 text-right">
                            <a href="javascript:;" class="btn btn-primary btn-lg top-right-button mr-1" id="btnAddSponsor">Add Sponsor</a>
                        </div>
                    
                </div>
                <div class="separator mb-5"></div>
            </div>
        </div>

        @* <div id="sectionViewStaff" class="d-none">*@
        <div id="sectionViewSponsor">
            <div class="row mb-4">
                <div class="col-12 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <table id="tblBusiness_ManageSponsor" class="data-table" @*class="data-table data-table-feature"*@>
                                <thead>
                                    <tr>
                                        <th>S.No.</th>
                                        <th>Image</th>
                                        <th>SponsorTitle</th>
                                        <th>SponsorLink</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="sectionAddSponsor" Style="display: none">
            <div class="row mb-4">
                <div class="col-12 mb-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="mb-4" id="myText">Add Sponsor</h5>
                            <form>
                                <div class="form-group">
                                    <label for="SponsorTitle">SponsorTitle</label>
                                    <input type="text" id="txtSponsorTitle" class="form-control" />
                                    <div class="error-class" id="error_txtSponsorTitle"></div>
                                </div>


                                <div class="form-group d-flex flex-column">
                                    <label>Sponsor Icon</label>
                                    <div class="imagePreview">
                                        <img id="previewImage" class="d-none" style="width:100%; height:100%;">
                                    </div>
                                    <input type="file" id="fileProfileImage_ManageSponsor" class="border form-control" accept="image/*">
                                    <div class="error-class" id="error_fileProfileImage_ManageSponsor"></div>
                                </div>
                                <div class="form-group">
                                    <label for="website">  SponsorLink</label>
                                    <input type="text" class="form-control" id="SponsorLink" required />
                                    <div class="error-class" id="error_SponsorLink"></div>
                                </div>

                                <button type="button" class="btn btn-primary mb-0" id="ChangeUpdateText" onclick="btnAddUpdateSponsor()">Submit</button>
                                <a href="javascript:;" class="btn btn-primary mb-0" onclick="ResetAddView()">Cancel</a>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</main>


@section Scripts{
    @Html.Partial("/Views/Shared/ScriptPartials/BusinessPanel/_ManageBusinessSponsorScriptPartial.cshtml")

