
@{
    ViewBag.Title = ViewBag.ErrorTitle;
    Layout = "~/Views/Shared/_BusinessAdminLayout.cshtml";
}

<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column justify-content-center align-items-center">
                            <i class="h1 fas fa-exclamation text-danger"></i>
                            <h4>@ViewBag.ErrorTitle</h4>
                            <p>@ViewBag.ErrorMessage</p>
                            <a href="/Business/Student" class="btn btn-sm btn-primary">Manage Student</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>